{
    "family": "demoproject-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::781964126677:role/ecsTaskExecutionRole",
    "containerDefinitions": [
      {
        "name": "demoproject",
        "image": "781964126677.dkr.ecr.ap-southeast-2.amazonaws.com/demoproject:latest",
        "essential": true,
        "portMappings": [
          {
            "containerPort": 80,
            "protocol": "tcp"
          }
        ],
        "environment": [
          {
            "name": "ENVIRONMENT",
            "value": "production"
          },
          {
            "name": "APP_NAME",
            "value": "demoproject"
          },
          {
            "name": "LOG_LEVEL",
            "value": "info"
          }
        ],
        "healthCheck": {
          "command": [
            "CMD-SHELL",
            "curl -f http://localhost/ || exit 1"
          ],
          "interval": 30,
          "timeout": 5,
          "retries": 3,
          "startPeriod": 10
        },
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/demoproject",
            "awslogs-region": "ap-southeast-2",
            "awslogs-stream-prefix": "ecs"
          }
        }
      }
    ]
  }
  